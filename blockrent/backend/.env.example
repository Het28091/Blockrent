# Backend Server Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3001

# MySQL Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=YOUR_MYSQL_PASSWORD
DB_NAME=blockrent_db

# IPFS Configuration
# Options: 'simulation' (dev), 'nft_storage', 'web3_storage', 'local'
IPFS_MODE=simulation
# Optional Keys if using real IPFS services
NFT_STORAGE_KEY=
WEB3_STORAGE_KEY=
LOCAL_IPFS_API=http://127.0.0.1:5001
IPFS_GATEWAY_URL=https://ipfs.io/ipfs

# Security Secrets (GENERATE THESE!)
# Run: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=replace_with_random_hex_string
SESSION_SECRET=replace_with_random_hex_string

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Blockchain Configuration
BLOCKCHAIN_RPC_URL=http://127.0.0.1:8545
# This is updated automatically by start_project.ps1
CONTRACT_ADDRESS=

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/gif

# Admin Wallet Address (Optional)
ADMIN_WALLET=